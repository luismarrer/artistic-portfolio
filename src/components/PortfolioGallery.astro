---
import Section from "./Section.astro"

interface PortfolioItem {
  title: string
  category: string
  image: string
  description: string
}

interface Props {
  items?: PortfolioItem[]
}

const defaultItems: PortfolioItem[] = [
  {
    title: "Abstract Composition",
    category: "Digital Art",
    image:
      "https://images.unsplash.com/photo-1541961017774-22349e4a1262?w=800&h=600&fit=crop",
    description: "A vibrant exploration of color and form",
  },
  {
    title: "Minimalist Series",
    category: "Design",
    image:
      "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&h=600&fit=crop",
    description: "Clean lines and purposeful simplicity",
  },
  {
    title: "Urban Landscapes",
    category: "Photography",
    image:
      "https://images.unsplash.com/photo-1480714378408-67cf0d13bc1b?w=800&h=600&fit=crop",
    description: "Capturing the essence of city life",
  },
  {
    title: "Brand Identity",
    category: "Branding",
    image:
      "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=800&h=600&fit=crop",
    description: "Cohesive visual identity system",
  },
  {
    title: "Nature Studies",
    category: "Illustration",
    image:
      "https://images.unsplash.com/photo-1502082553048-f009c37129b9?w=800&h=600&fit=crop",
    description: "Organic forms and natural beauty",
  },
  {
    title: "Modern Interface",
    category: "UI/UX",
    image:
      "https://images.unsplash.com/photo-1507238691740-187a5b1d37b8?w=800&h=600&fit=crop",
    description: "Intuitive user experience design",
  },
]

const { items = defaultItems } = Astro.props
---

<Section
  title="Portfolio"
  description="A collection of my recent creative work and projects"
>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mx-auto container"
  >
    {
      items.map((item) => (
        <article class="group relative overflow-hidden rounded-xl bg-white shadow-md hover:shadow-xl transition-shadow duration-300">
          <div class="aspect-[4/3] overflow-hidden">
            <img
              src={item.image}
              alt={item.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <span class="text-sm text-slate-600 font-medium">
              {item.category}
            </span>
            <h3 class="text-xl font-semibold mt-2 mb-2 text-gray-900">
              {item.title}
            </h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        </article>
      ))
    }
  </div>
</Section>
