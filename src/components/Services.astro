const { services = defaultServices } = Astro.props
---

<section id="services" class="py-20 bg-[#FEEACA] -mt-36 relative z-30">
  <div class="container mx-auto px-6">
    <!-- subtle top overlay to accept the hero blend and create a soft mix -->
    <div
      class="absolute left-0 right-0 top-0 h-36 pointer-events-none"
      style="background: linear-gradient(to bottom, rgba(254,234,202,0.0), rgba(254,234,202,0.9)); filter: blur(20px);"
    >
    </div>
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Services
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Comprehensive creative solutions tailored to bring your vision to life
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        services.map((service) => (
          <div class="group p-8 rounded-2xl bg-white/80 backdrop-blur-sm hover:bg-white transition-all duration-300 border border-gray-200 hover:border-orange-400 hover:shadow-xl hover:-translate-y-1">
            <div class="mb-6 inline-block p-3 rounded-xl bg-orange-100 text-orange-600 group-hover:bg-orange-500 group-hover:text-white transition-all duration-300">
              <svg
                class="w-8 h-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={service.icon}
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-900 group-hover:text-orange-600 transition-colors duration-300">
              {service.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
